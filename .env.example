# StockMate Configuration Example
# Copy this file to .env and fill in your actual values

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=StockMate
DEBUG=false

# ============================================================================
# Database Configuration
# ============================================================================
DB_USER=your_mysql_username
DB_PASSWORD=your_mysql_password
DB_HOST=localhost
DB_PORT=3306
DB_NAME=stockmate

# ============================================================================
# External API Keys
# ============================================================================
FMP_API_KEY=your_fmp_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# Google Cloud Pub/Sub Configuration
# ============================================================================
# Your GCP Project ID
GCP_PROJECT_ID=your-gcp-project-id

# Path to Google Cloud credentials JSON file (optional)
# If not set, will use Application Default Credentials
GCP_CREDENTIALS_PATH=

# Topic names for different sync operations
PUBSUB_COMPANY_SYNC_TOPIC=company-sync

# Enable/disable Pub/Sub functionality
PUBSUB_ENABLED=true

# ============================================================================
# Authentication
# ============================================================================
# JWT Secret Key (keep this secure!)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
AUTH_SECRET_KEY=your-secret-key-here

# JWT Algorithm
AUTH_ALGORITHM=HS256

# Token expiration time in minutes
AUTH_TOKEN_EXPIRE_MINUTES=300

# ============================================================================
# Optional Settings
# ============================================================================

# Database Connection Pool Settings
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=20
# DB_POOL_RECYCLE=3600

# Redis Configuration (for caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379

# FMP API Settings
# FMP_TIMEOUT=10
# FMP_MAX_LIMIT=100

# Internal API Key
# INTERNAL_API_KEY=generate-a-secure-random-key
